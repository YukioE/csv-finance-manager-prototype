{
    "compilerOptions": {
        "lib": ["es5", "es6", "dom"],
        "target": "ESNext",
        "module": "ESNext",
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "outDir": "./dist",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "strict": true,
        // "noUnusedLocals":true,
        "noImplicitAny": true,
        "downlevelIteration": true
    },
    "include": ["src"]
}
